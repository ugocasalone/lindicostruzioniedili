---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Contatti">
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 md:pt-40 md:pb-28">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.pexels.com/photos/323705/pexels-photo-323705.jpeg" 
        alt="Contattaci" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-primary-800/80"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl text-white">
        <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">
          {t('contact.title')}
        </h1>
        <p class="text-xl text-primary-100">
          {t('contact.subtitle')}
        </p>
      </div>
    </div>
  </section>
  
  <!-- Contact Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-primary-50 p-8 rounded-lg shadow-lg reveal">
          <h2 class="text-2xl font-serif font-bold mb-6 text-primary-800">
            Inviaci un messaggio
          </h2>
          
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                {t('contact.name')}
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                {t('contact.email')}
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
                {t('contact.phone')}
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
                {t('contact.message')}
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              ></textarea>
            </div>
            
            <div>
              <button 
                type="submit"
                class="inline-block w-full px-6 py-3 bg-primary-600 text-white font-medium uppercase tracking-wider text-sm rounded-md hover:bg-primary-700 transition-colors"
              >
                {t('contact.submit')}
              </button>
            </div>
          </form>
          
          <!-- Form success message (hidden by default) -->
          <div id="form-success" class="hidden mt-6 p-4 bg-green-100 text-green-800 rounded-md">
            Grazie per il tuo messaggio! Ti contatteremo al più presto.
          </div>
        </div>
        
        <!-- Contact Information -->
        <div class="reveal">
          <h2 class="text-2xl font-serif font-bold mb-6 text-primary-800">
            Informazioni di contatto
          </h2>
          
          <div class="space-y-8">
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-primary-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-800 mb-1">{t('contact.address')}</h3>
                <p class="text-gray-700">Via Roma 123<br/>15020 Monferrato (AL)<br/>Italia</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-primary-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-800 mb-1">{t('contact.emailUs')}</h3>
                <p class="text-gray-700">
                  <a href="mailto:info@costruzionimonferrato.it" class="hover:text-primary-600 transition-colors">info@costruzionimonferrato.it</a>
                </p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-primary-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-800 mb-1">{t('contact.callUs')}</h3>
                <p class="text-gray-700">
                  <a href="tel:+390123456789" class="hover:text-primary-600 transition-colors">+39 0123 456789</a>
                </p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-primary-100 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-800 mb-1">Orari</h3>
                <p class="text-gray-700">
                  Lunedì - Venerdì: 8:30 - 18:00<br/>
                  Sabato: 9:00 - 13:00<br/>
                  Domenica: Chiuso
                </p>
              </div>
            </div>
          </div>
          
          <!-- Social Media -->
          <div class="mt-8">
            <h3 class="text-lg font-semibold text-primary-800 mb-3">Seguici</h3>
            <div class="flex space-x-4">
              <a href="#" class="bg-primary-100 p-3 rounded-full text-primary-600 hover:bg-primary-200 transition-colors">
                <span class="sr-only">Facebook</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.04C6.5 2.04 2 6.53 2 12.06C2 17.06 5.66 21.21 10.44 21.96V14.96H7.9V12.06H10.44V9.85C10.44 7.34 11.93 5.96 14.22 5.96C15.31 5.96 16.45 6.15 16.45 6.15V8.62H15.19C13.95 8.62 13.56 9.39 13.56 10.18V12.06H16.34L15.89 14.96H13.56V21.96A10 10 0 0 0 22 12.06C22 6.53 17.5 2.04 12 2.04Z"/>
                </svg>
              </a>
              <a href="#" class="bg-primary-100 p-3 rounded-full text-primary-600 hover:bg-primary-200 transition-colors">
                <span class="sr-only">Instagram</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M7.8 2H16.2C19.4 2 22 4.6 22 7.8V16.2C22 19.4 19.4 22 16.2 22H7.8C4.6 22 2 19.4 2 16.2V7.8C2 4.6 4.6 2 7.8 2ZM16.2 20C18.3 20 20 18.3 20 16.2V7.8C20 5.7 18.3 4 16.2 4H7.8C5.7 4 4 5.7 4 7.8V16.2C4 18.3 5.7 20 7.8 20H16.2ZM12 7C9.2 7 7 9.2 7 12C7 14.8 9.2 17 12 17C14.8 17 17 14.8 17 12C17 9.2 14.8 7 12 7ZM12 15C10.3 15 9 13.7 9 12C9 10.3 10.3 9 12 9C13.7 9 15 10.3 15 12C15 13.7 13.7 15 12 15Z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Map Section -->
  <section class="py-8">
    <div class="container mx-auto px-4">
      <div class="h-96 rounded-lg overflow-hidden shadow-lg reveal">
        <!-- Placeholder for map - in production would be replaced with actual map integration -->
        <div class="h-full w-full bg-gray-200 flex items-center justify-center">
          <p class="text-gray-600 text-lg font-medium">Mappa di Monferrato</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('astro:page-load', () => {
    const form = document.getElementById('contact-form');
    const formSuccess = document.getElementById('form-success');
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Simulate form submission
      setTimeout(() => {
        form.reset();
        
        if (formSuccess) {
          formSuccess.classList.remove('hidden');
          
          // Hide success message after 5 seconds
          setTimeout(() => {
            formSuccess.classList.add('hidden');
          }, 5000);
        }
      }, 1000);
    });
  });
</script>