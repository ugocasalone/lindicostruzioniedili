---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import ProjectCard from '../components/ProjectCard.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Services data
const services = [
  {
    id: 'renovation',
    title: t('services.renovation.title'),
    description: t('services.renovation.description'),
    icon: 'home',
    image: 'https://images.pexels.com/photos/1643383/pexels-photo-1643383.jpeg'
  },
  {
    id: 'farmhouse',
    title: t('services.farmhouse.title'),
    description: t('services.farmhouse.description'),
    icon: 'farmhouse',
    image: 'https://images.pexels.com/photos/2102587/pexels-photo-2102587.jpeg'
  },
  {
    id: 'concrete',
    title: t('services.concrete.title'),
    description: t('services.concrete.description'),
    icon: 'concrete',
    image: 'https://images.pexels.com/photos/1134166/pexels-photo-1134166.jpeg'
  },
  {
    id: 'excavation',
    title: t('services.excavation.title'),
    description: t('services.excavation.description'),
    icon: 'excavation',
    image: 'https://images.pexels.com/photos/2219024/pexels-photo-2219024.jpeg'
  },
  {
    id: 'pools',
    title: t('services.pools.title'),
    description: t('services.pools.description'),
    icon: 'pool',
    image: 'https://images.pexels.com/photos/261327/pexels-photo-261327.jpeg'
  }
];

// Featured projects
const featuredProjects = [
  {
    title: 'Villa Monferrato',
    description: 'Ristrutturazione completa di una villa storica con piscina',
    image: 'https://images.pexels.com/photos/323780/pexels-photo-323780.jpeg',
    slug: '/portfolio/villa-monferrato'
  },
  {
    title: 'Cascina Rinnovata',
    description: 'Trasformazione di una cascina in una moderna casa di campagna',
    image: 'https://images.pexels.com/photos/3958958/pexels-photo-3958958.jpeg',
    slug: '/portfolio/cascina-rinnovata'
  },
  {
    title: 'Appartamento Centro',
    description: 'Ristrutturazione di un appartamento nel centro storico',
    image: 'https://images.pexels.com/photos/1571470/pexels-photo-1571470.jpeg',
    slug: '/portfolio/appartamento-centro'
  }
];

// Testimonials
const testimonials = [
  {
    name: 'Marco Bianchi',
    role: 'Proprietario Villa',
    quote: 'Il lavoro svolto sulla nostra villa ha superato le nostre aspettative. Professionalità e attenzione ai dettagli che raramente si trovano.',
    image: 'https://images.pexels.com/photos/614810/pexels-photo-614810.jpeg'
  },
  {
    name: 'Giulia Rossi',
    role: 'Proprietaria Cascina',
    quote: 'Hanno trasformato la nostra vecchia cascina in un\'abitazione moderna mantenendo tutto il fascino originale. Risultato straordinario!',
    image: 'https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg'
  },
  {
    name: 'Alessandro Verdi',
    role: 'Architetto',
    quote: 'Collaboro con loro da anni e la qualità del loro lavoro è sempre impeccabile. Consiglio vivamente a chi cerca professionalità e competenza.',
    image: 'https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg'
  }
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative h-screen flex items-center">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.pexels.com/photos/323780/pexels-photo-323780.jpeg" 
        alt="Villa ristrutturata nel Monferrato" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/30"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-2xl text-white">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-4 reveal">
          {t('hero.title')}
        </h1>
        <p class="text-xl md:text-2xl mb-8 reveal">
          {t('hero.subtitle')}
        </p>
        <a 
          href="#services" 
          class="inline-block px-6 py-3 bg-primary-600 text-white font-medium uppercase tracking-wider text-sm rounded-md hover:bg-primary-700 transition-colors reveal"
        >
          {t('hero.cta')}
        </a>
      </div>
    </div>
  </section>
  
  <!-- Services Section -->
  <section id="services" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4 reveal">
          {t('services.title')}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto reveal">
          {t('services.subtitle')}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.slice(0, 3).map((service, index) => (
          <div class="reveal" style={`animation-delay: ${index * 100}ms`}>
            <ServiceCard 
              title={service.title} 
              description={service.description} 
              image={service.image} 
              icon={service.icon}
              id={service.id}
            />
          </div>
        ))}
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
        {services.slice(3).map((service, index) => (
          <div class="reveal" style={`animation-delay: ${(index + 3) * 100}ms`}>
            <ServiceCard 
              title={service.title} 
              description={service.description} 
              image={service.image} 
              icon={service.icon}
              id={service.id}
            />
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a 
          href="/services" 
          class="inline-block px-6 py-3 bg-primary-100 text-primary-800 font-medium uppercase tracking-wider text-sm rounded-md hover:bg-primary-200 transition-colors reveal"
        >
          {t('services.title')}
        </a>
      </div>
    </div>
  </section>
  
  <!-- About Short Section -->
  <section class="py-20 bg-primary-800 text-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div class="reveal">
          <h2 class="text-3xl md:text-4xl font-serif font-bold mb-6">
            {t('about.title')}
          </h2>
          <p class="text-primary-100 text-lg mb-6">
            {t('about.description')}
          </p>
          <a 
            href="/about" 
            class="inline-block px-6 py-3 bg-accent-500 text-white font-medium uppercase tracking-wider text-sm rounded-md hover:bg-accent-600 transition-colors"
          >
            {t('about.title')}
          </a>
        </div>
        
        <div class="relative reveal">
          <img 
            src="https://images.pexels.com/photos/4513940/pexels-photo-4513940.jpeg" 
            alt="Artigiani al lavoro" 
            class="rounded-lg shadow-xl"
          />
          <div class="absolute -bottom-6 -left-6 bg-accent-500 p-6 rounded-lg shadow-lg md:max-w-xs">
            <p class="font-serif italic text-lg">
              "{t('about.mission')}"
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Projects -->
  <section class="py-20 bg-primary-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4 reveal">
          {t('portfolio.title')}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto reveal">
          {t('portfolio.subtitle')}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredProjects.map((project, index) => (
          <div class="reveal" style={`animation-delay: ${index * 100}ms`}>
            <ProjectCard 
              title={project.title} 
              description={project.description} 
              image={project.image} 
              slug={project.slug}
            />
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a 
          href="/portfolio" 
          class="inline-block px-6 py-3 bg-primary-600 text-white font-medium uppercase tracking-wider text-sm rounded-md hover:bg-primary-700 transition-colors reveal"
        >
          {t('portfolio.viewAll')}
        </a>
      </div>
    </div>
  </section>
  
  <!-- Testimonials -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4 reveal">
          {t('testimonials.title')}
        </h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div class="reveal" style={`animation-delay: ${index * 100}ms`}>
            <TestimonialCard 
              name={testimonial.name} 
              role={testimonial.role} 
              quote={testimonial.quote} 
              image={testimonial.image}
            />
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-primary-700 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-serif font-bold mb-6 reveal">
        {t('contact.subtitle')}
      </h2>
      <p class="text-primary-100 text-xl max-w-3xl mx-auto mb-8 reveal">
        Siamo pronti ad aiutarti a trasformare la tua visione in realtà. Contattaci oggi per una consulenza gratuita.
      </p>
      <a 
        href="/contact" 
        class="inline-block px-8 py-4 bg-accent-500 text-white font-medium uppercase tracking-wider text-sm rounded-md hover:bg-accent-600 transition-colors reveal"
      >
        {t('contact.title')}
      </a>
    </div>
  </section>
</Layout>