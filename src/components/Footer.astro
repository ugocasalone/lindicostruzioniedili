---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
---

<footer class="bg-primary-800 text-white pt-12 pb-6">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Company info -->
      <div>
        <h3 class="text-xl font-serif font-semibold mb-4">Costruzioni Monferrato</h3>
        <p class="text-primary-100 mb-4">
          Specialisti in ristrutturazioni di case di campagna nel Monferrato dal 1998.
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-white hover:text-accent-300 transition-colors">
            <span class="sr-only">Facebook</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
              <path d="M12 2.04C6.5 2.04 2 6.53 2 12.06C2 17.06 5.66 21.21 10.44 21.96V14.96H7.9V12.06H10.44V9.85C10.44 7.34 11.93 5.96 14.22 5.96C15.31 5.96 16.45 6.15 16.45 6.15V8.62H15.19C13.95 8.62 13.56 9.39 13.56 10.18V12.06H16.34L15.89 14.96H13.56V21.96A10 10 0 0 0 22 12.06C22 6.53 17.5 2.04 12 2.04Z"/>
            </svg>
          </a>
          <a href="#" class="text-white hover:text-accent-300 transition-colors">
            <span class="sr-only">Instagram</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
              <path d="M7.8 2H16.2C19.4 2 22 4.6 22 7.8V16.2C22 19.4 19.4 22 16.2 22H7.8C4.6 22 2 19.4 2 16.2V7.8C2 4.6 4.6 2 7.8 2ZM16.2 20C18.3 20 20 18.3 20 16.2V7.8C20 5.7 18.3 4 16.2 4H7.8C5.7 4 4 5.7 4 7.8V16.2C4 18.3 5.7 20 7.8 20H16.2ZM12 7C9.2 7 7 9.2 7 12C7 14.8 9.2 17 12 17C14.8 17 17 14.8 17 12C17 9.2 14.8 7 12 7ZM12 15C10.3 15 9 13.7 9 12C9 10.3 10.3 9 12 9C13.7 9 15 10.3 15 12C15 13.7 13.7 15 12 15Z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Quick links -->
      <div>
        <h3 class="text-xl font-serif font-semibold mb-4">{t('nav.services')}</h3>
        <ul class="space-y-2">
          <li><a href="/services#renovation" class="text-primary-100 hover:text-white transition-colors">{t('services.renovation.title')}</a></li>
          <li><a href="/services#farmhouse" class="text-primary-100 hover:text-white transition-colors">{t('services.farmhouse.title')}</a></li>
          <li><a href="/services#concrete" class="text-primary-100 hover:text-white transition-colors">{t('services.concrete.title')}</a></li>
          <li><a href="/services#excavation" class="text-primary-100 hover:text-white transition-colors">{t('services.excavation.title')}</a></li>
          <li><a href="/services#pools" class="text-primary-100 hover:text-white transition-colors">{t('services.pools.title')}</a></li>
        </ul>
      </div>
      
      <!-- Contact info -->
      <div>
        <h3 class="text-xl font-serif font-semibold mb-4">{t('contact.title')}</h3>
        <address class="not-italic">
          <p class="flex items-start mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5 text-accent-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-primary-100">Via Roma 123, Monferrato, Italia</span>
          </p>
          <p class="flex items-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:info@costruzionimonferrato.it" class="text-primary-100 hover:text-white transition-colors">info@costruzionimonferrato.it</a>
          </p>
          <p class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+390123456789" class="text-primary-100 hover:text-white transition-colors">+39 0123 456789</a>
          </p>
        </address>
      </div>
    </div>
    
    <div class="border-t border-primary-700 pt-6 mt-8 text-center text-primary-200 text-sm">
      <p>&copy; {currentYear} Costruzioni Monferrato. {t('footer.rights')}.</p>
    </div>
  </div>
</footer>