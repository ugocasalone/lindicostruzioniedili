---
interface Props {
  name: string;
  role: string;
  quote: string;
  image: string;
}

const { name, role, quote, image } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-6 lg:p-8 relative">
  <div class="absolute -top-5 right-10 text-accent-500 opacity-50">
    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
  </div>
  
  <p class="text-gray-700 italic mb-6">{quote}</p>
  
  <div class="flex items-center">
    <img 
      src={image} 
      alt={name} 
      class="w-12 h-12 rounded-full object-cover mr-4"
    />
    <div>
      <h4 class="font-semibold text-primary-800">{name}</h4>
      <p class="text-gray-600 text-sm">{role}</p>
    </div>
  </div>
</div>