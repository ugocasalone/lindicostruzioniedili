---
interface Props {
  title: string;
  description: string;
  image: string;
  slug: string;
}

const { title, description, image, slug } = Astro.props;
---

<a href={slug} class="block group">
  <div class="bg-white rounded-lg overflow-hidden shadow-lg h-full">
    <div class="relative h-56 overflow-hidden">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
    </div>
    
    <div class="p-6">
      <h3 class="text-xl font-serif font-semibold mb-2 text-primary-800 group-hover:text-primary-600 transition-colors">{title}</h3>
      <p class="text-gray-700 mb-4">{description}</p>
      <div class="inline-flex items-center text-primary-600 group-hover:text-primary-800 transition-colors">
        Vedi progetto
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </div>
    </div>
  </div>
</a>